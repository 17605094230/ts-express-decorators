{
  "compilerOptions": {
    "baseUrl": ".",
    "module": "commonjs",
    "target": "es5",
    "noImplicitAny": false,
    "sourceMap": true,
    "declaration":true,
    "experimentalDecorators":true,
    "emitDecoratorMetadata": true,
    "moduleResolution": "node",
    "suppressImplicitAnyIndexErrors": false,
    "declarationDir":"dts",
    "noResolve": false,
    "lib": [
      "es6",
      "dom",
      "es2015.promise"
    ],
    "rootDir":"src",
    "types":[
      "node",
      "bluebird",
      "chai",
      "mocha",
      "cookie-parser",
      "express",
      "reflect-metadata",
      "supertest"
    ]
  },
  "exclude": [
    "test",
    "node_modules",
    "dts"
  ]
}