{
  "include": [
    "packages/*/src/**/*.ts"
  ],
  "exclude": [
    "**/*.d.ts",
    "node_modules",
    "packages/**/*.spec.ts",
    "**/interfaces/**",
    "**/legacy/**",
    "**/index.ts"
  ],
  "extension": [
    ".ts"
  ],
  "require": [
    "ts-node/register"
  ],
  "reporter": [
    "lcov",
    "text-summary"
  ],
  "check-coverage": true,
  "lines": 99,
  "statements": 100,
  "functions": 99,
  "branches": 89,
  "all": true,
  "sourceMap": true,
  "instrument": true
}
